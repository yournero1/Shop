{"ast":null,"code":"export default {\n  name: \"v-select\",\n  props: {\n    options: {\n      type: Array,\n      default() {\n        return [];\n      }\n    },\n    selected: {\n      type: String,\n      default: ''\n    },\n    isExpanded: {\n      type: Boolean,\n      default: false\n    }\n  },\n  data() {\n    return {\n      areOptionsVisible: false\n    };\n  },\n  methods: {\n    selectOption(option) {\n      this.$emit('select', option.name);\n      this.areOptionsVisible = false; //при выборе закрывает варианты выбора\n    }\n  }\n};","map":{"version":3,"mappings":"AAaA;EACAA;EACAC;IACAC;MACAC;MACAC;QACA;MACA;IACA;IACAC;MACAF;MACAC;IACA;IACAE;MACAH;MACAC;IACA;EACA;EACAG;IACA;MACAC;IACA;EACA;EACAC;IACAC;MACA;MACA;IACA;EACA;AAEA","names":["name","props","options","type","default","selected","isExpanded","data","areOptionsVisible","methods","selectOption"],"sourceRoot":"src/components","sources":["v-select.vue"],"sourcesContent":["\n<template>\n    <div class='v-select'>\n        <p class=\"title\" @click=\"areOptionsVisible = true\">{{ selected }}</p>\n        <div class=\"options\" v-if=\"areOptionsVisible\">\n            <p v-for=\"option in options\" :key=\"option.value\" @click=\"selectOption(option)\">\n                {{ option.name }}\n            </p>\n        </div>\n    </div>\n</template>\n\n<script>\nexport default {\n    name: \"v-select\",\n    props: {\n        options: {\n            type: Array,\n            default() {\n                return []\n            }\n        },\n        selected: {\n            type: String,\n            default: ''\n        },\n        isExpanded: {\n            type: Boolean,\n            default: false\n        }\n    },\n    data() {\n        return {\n            areOptionsVisible: false\n        }\n    },\n    methods: {\n        selectOption(option) {\n            this.$emit('select', option.name)\n            this.areOptionsVisible = false; //при выборе закрывает варианты выбора\n        },\n    },\n\n}\n</script>\n\n<style>\n.v-select {\n    position: relative;\n    width: 200px;\n    cursor: pointer;\n    text-align: left;\n}\n\n.title {\n    border: solid 1px #aeaeae;\n    padding: 8px;\n}\n\n.v-select p {\n    margin: 0;\n}\n\n.options {\n    border: solid 1px #aeaeae;\n    background: #ffffff;\n    position: absolute;\n    top: 30px;\n    left: 0;\n    width: 100%;\n    padding: 8px;\n}\n\n.options p:hover {\n    background: #e7e7e7;\n}\n</style>"]},"metadata":{},"sourceType":"module"}